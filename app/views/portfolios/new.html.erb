<%= form_with model: @portfolio, html: {class: 'ui center aligned container form'} do |f| %>
    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    
    <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>

    <div class="field">
        <%= f.label :thumb_image %>
        <%= f.file_field :thumb_image %>
    </div>
    <div class="field">
        <%= f.label :images %>
        <%= f.file_field :images %>
    </div>
    
    <%= f.submit 'Submit portfolio', class: 'ui olive basic button' %>

<% end %>